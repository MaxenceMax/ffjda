<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ffjda.ffjudo.views.VogoActivity">
    <!--Navigation drawer -->
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout">
        <RelativeLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/activity_licences_view_top"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <ImageView
                        android:id="@+id/show_menu"
                        android:layout_marginLeft="10dp"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:src="@drawable/menu_icon_focusable"/>
                    <ImageView
                        android:padding="5dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/bandeau_ffjda"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:background="@layout/top_radius_background_white"
                android:layout_height="match_parent"
                android:layout_below="@id/activity_licences_view_top"
                android:layout_above="@id/activity_licences_add_licence">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="8"
                            android:layout_height="70dp"
                            android:src="@drawable/vogo_logo_app"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="20"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_alignParentTop="true"
                                android:layout_gravity="top"
                                android:textSize="25dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="@string/Vogo"
                                android:textStyle="bold"
                                android:textColor="@color/blue"
                                android:layout_marginBottom="5dp"/>
                            <TextView
                                android:layout_alignParentTop="true"
                                android:layout_gravity="top"
                                android:textSize="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="@string/par_vogo"
                                android:textColor="@color/blue"
                                android:layout_marginBottom="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:src="@drawable/picto_arrow_white"/>
                        <TextView
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/Description"
                            android:textColor="@color/white"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="10dp"/>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:src="@drawable/picto_arrow_down"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/blue"
                        android:text="@string/Description_1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/blue"
                        android:text="@string/Description_2"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white">
                    <RelativeLayout
                        android:id="@+id/activity_vogo_lancer_layout"
                        android:layout_width="match_parent"
                        android:background="@drawable/blue_layout_clickable"
                        android:clickable="true"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:text="@string/Lancer"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <ListView
            android:id="@+id/navList"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:layout_gravity="left|start"
            android:background="#cceeeeee"/>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
